# ----------------------------------------------------- 
# Hyprlock Config
# ----------------------------------------------------- 
# This is a template file.
# Colors and fonts are managed by theme.sh
# ----------------------------------------------------- 

background {
    path = ##wallpaper##
    blur_passes = 3
    blur_size = 8
}

input-field {
    monitor =
    size = 250, 50
    outline_thickness = 2
    dots_size = 0.33
    dots_spacing = 0.15
    dots_center = true
    dots_rounding = -1
    outer_color = rgba(##base##ff)
    inner_color = rgba(##surface1##ff)
    font_color = rgba(##text##ff)
    fade_on_empty = true
    fade_timeout = 1000
    placeholder_text = <i>Password...</i>
    hide_input = false
    rounding = 15
    position = 0, -100
    halign = center
    valign = center
}

label {
    monitor =
    text = cmd[update:1000] echo "<b><big> $(date +"%H:%M") </big></b>"
    color = rgba(##text##ff)
    font_size = 64
    font_family = ##font_main##
    position = 0, 80
    halign = center
    valign = center
}

label {
    monitor =
    text = Hi there, $USER
    color = rgba(##text##ff)
    font_size = 25
    font_family = ##font_main##
    position = 0, -20
    halign = center
    valign = center
}