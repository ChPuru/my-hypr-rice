/* --- Import simple bar styles --- */
@import url('../ags/style.css');

/* --- Dashboard --- */
.dashboard-container {
    background-color: rgba(##crust##, 0.7);
}

.dashboard-box {
    background-color: ##base##;
    padding: 2rem;
    margin: 4rem;
    border-radius: 1.5rem;
    border: 2px solid ##mauve##;
}

.profile-icon {
    border-radius: 999px;
    border: 4px solid ##blue##;
    padding: 1rem;
    background-color: ##mantle##;
}

.profile-name {
    font-size: 1.5rem;
    font-weight: bold;
    margin-top: 1rem;
}

.system-stats {
    padding: 2rem;
}

.cpu-progress, .ram-progress {
    min-width: 200px;
}

.power-menu button {
    font-size: 2rem;
    padding: 1rem;
    margin: 0.5rem;
    border-radius: 1rem;
    background-color: ##surface0##;
}
.power-menu button:hover {
    background-color: ##red##;
    color: ##crust##;
}

/* --- OSD --- */
.osd-container {
    padding-bottom: 2rem;
}

.osd {
    background-color: ##base##;
    border: 2px solid ##mauve##;
    border-radius: 1rem;
    padding: 0.5rem 1rem;
    margin: 0 0.5rem;
}

.osd-progress {
    min-width: 150px;
}

/* --- Control Center --- */
.cc-container {
    background-color: ##base##;
    border-left: 2px solid ##mauve##;
    padding: 1rem;
}

.cc-toggle {
    background-color: ##surface0##;
    padding: 0.5rem;
    margin-bottom: 0.5rem;
    border-radius: 1rem;
}

.cc-toggle:hover {
    background-color: ##surface1##;
}

.cc-toggle.active {
    background-color: ##blue##;
    color: ##crust##;
}

/* --- Music Widget --- */
.music-widget {
    background-color: ##surface0##;
    padding: 5px 10px;
    margin: 5px;
    border-radius: 10px;
}

.music-cover {
    border-radius: 5px;
    margin-right: 5px;
}